%section#main-content
  %article.page
    %div{class: ('ilustrated' if @page.image?)}
      %header.main
        .content
          = manage_icons @page
          %h1= editable @page, :title, nested: :translations, nid: @page.translation.id
      .page-ilustration= image_tag @page.image.original.thumb
      .page-content= @page.content.try(:html_safe)