%article.page
  %div{class: ('ilustrated' if page.image?)}
    = manage_icons page, except: [:new, :list]
    .page-ilustration= link_to image_tag(page.image.landscape.thumb), page
    %header.page
      .content
        %h2= editable page, :title, nested: :translations, nid: page.translation.id, e: link_to(page.title, page)
    .page-content= extract page.content, truncate: 190